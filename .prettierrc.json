{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 100,
  "trailingComma": "es5",
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^react$",
    "^react-dom",
    "^@?(?!src)[a-z]",
    "^@/",
    "^\\./",
    "^tailwindcss"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
