'use client'

import { useRouter } from 'next/navigation'

import { NewTransactionGroupForm } from '@/modules/financeiro/components/NewTransactionGroupForm'
import { ModuleGuard } from '@/modules/workspace/components/ModuleGuard'
import { useBreadcrumb } from '@/modules/workspace/hooks'
import { useActiveWorkspace } from '@/modules/workspace/hooks/useActiveWorkspace'

export default function NewTransactionPage() {
  const router = useRouter()
  const { activeWorkspace } = useActiveWorkspace()

  useBreadcrumb([
    {
      label: 'Finanças',
      href: '/financeiro',
    },
    {
      label: 'Nova Transação',
      href: '/financeiro/new',
    },
  ])

  if (!activeWorkspace?.id) {
    return (
      <div className="py-12 text-center">
        <p className="text-gh-text-secondary">Workspace não disponível</p>
      </div>
    )
  }

  return (
    <ModuleGuard moduleId="finance">
      <div className="min-h-screen p-6">
        <div className="mx-auto max-w-4xl">
          <NewTransactionGroupForm
            workspaceId={activeWorkspace.id}
            onSuccess={() => {
              router.push('/financeiro')
            }}
            onCancel={() => {
              router.back()
            }}
          />
        </div>
      </div>
    </ModuleGuard>
  )
}
